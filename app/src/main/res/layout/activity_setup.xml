<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    app:itemTextAppearance="@style/menu_text_style"
    tools:context=".SetupActivity"
    tools:openDrawer="end">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/id_main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/navbar"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/bgtitle"
                android:elevation="4dp">


                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="104dp"
                    android:layout_height="51dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/logosb"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <ScrollView
                android:id="@+id/scrollGrid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="vertical"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:paddingBottom="20dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:layout_marginTop="6dp"
                        android:background="@drawable/radious_white_bg"
                        android:elevation="12dp"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_extrabold_italic"
                            android:text="Operations"
                            android:textFontWeight="900"
                            android:textAlignment="center"
                            android:textSize="22sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="12dp"
                            android:layout_marginTop="6dp"

                            android:orientation="horizontal">


                            <LinearLayout
                                android:id="@+id/HostLinearLayout"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_margin="8dp"
                                android:layout_weight="1"
                                android:background="@drawable/radious_white_bg_orange_low_ra"
                                android:elevation="4dp"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="5dp">

                                <TextView
                                    android:id="@+id/textView1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:fontFamily="@font/montserrat_semibold"
                                    android:text="Host Parameter"
                                    android:textAlignment="center"
                                    android:textColor="@color/white"
                                    android:textSize="18dp" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/PinKeyInjectionLinearLayout"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_margin="8dp"
                                android:layout_weight="1"
                                android:background="@drawable/radious_white_bg_orange_low_ra"
                                android:elevation="4dp"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="5dp">

                                <TextView
                                    android:id="@+id/textView2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"

                                    android:fontFamily="@font/montserrat_semibold"
                                    android:text="PIN Key Injection"
                                    android:textAlignment="center"
                                    android:textColor="@color/white"
                                    android:textSize="18dp" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:layout_marginTop="6dp"
                        android:background="@drawable/radious_white_bg"
                        android:elevation="12dp"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_extrabold_italic"
                            android:text="Developer Tools"
                            android:textFontWeight="900"
                            android:textAlignment="center"
                            android:textSize="22sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="12dp"
                            android:layout_marginTop="6dp"

                            android:orientation="horizontal">


                            <LinearLayout
                                android:id="@+id/EraseKeyLinearLayout"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_margin="8dp"
                                android:layout_weight="1"
                                android:background="@drawable/radious_white_bg_orange_low_ra"
                                android:elevation="4dp"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="5dp">

                                <TextView
                                    android:id="@+id/eraseKeyTextView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:fontFamily="@font/montserrat_semibold"
                                    android:text="Erase All Keys"
                                    android:textAlignment="center"
                                    android:textColor="@color/white"
                                    android:textSize="18dp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_margin="8dp"
                                android:layout_weight="1"
                                android:background="@drawable/radious_white_bg_orange_low_ra"
                                android:elevation="4dp"
                                android:gravity="center"
                                android:visibility="invisible"
                                android:orientation="vertical"
                                android:padding="5dp">


                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:layout_marginTop="6dp"
                        android:background="@drawable/radious_white_bg"
                        android:elevation="12dp"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_extrabold_italic"
                            android:text="Table Config"
                            android:textFontWeight="900"
                            android:textAlignment="center"
                            android:textSize="22sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="12dp"
                            android:layout_marginTop="6dp"

                            android:orientation="horizontal">


                            <LinearLayout
                                android:id="@+id/EditTableLinearLayout"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_margin="8dp"
                                android:layout_weight="1"
                                android:background="@drawable/radious_white_bg_orange_low_ra"
                                android:elevation="4dp"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="5dp">

                                <TextView
                                    android:id="@+id/EditTabletextView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:fontFamily="@font/montserrat_semibold"
                                    android:text="Edit Table"
                                    android:textAlignment="center"
                                    android:textColor="@color/white"
                                    android:textSize="18dp" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/SetMerchantLinearLayout"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_margin="8dp"
                                android:layout_weight="1"
                                android:background="@drawable/radious_white_bg_orange_low_ra"
                                android:elevation="4dp"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="5dp">

                                <TextView
                                    android:id="@+id/SetMerchanttextView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"

                                    android:fontFamily="@font/montserrat_semibold"
                                    android:text="Set Merchant Password"
                                    android:textAlignment="center"
                                    android:textColor="@color/white"
                                    android:textSize="18dp" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>




                </LinearLayout>





            </ScrollView>


        </LinearLayout>





    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.drawerlayout.widget.DrawerLayout>